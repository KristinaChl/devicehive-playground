<div class="playground_detail">
    <a href="" class="playground__logout" id="logout">
        Logout
        <span class="logout__icon svg-logout"></span>
    </a>
    <div class="playground-details">
        <div class="playground-details__item">
            <h2 class="details__heading">
                API URL
            </h2>
            <div class="details__panel">
                <a class="details__panel__link" href="<%= api %>" target="_blank">
                    <%= api %>
                </a>
            </div>
        </div>

        <div class="playground-details__item">
            <h2 class="details__heading">
                API URL
            </h2>
            <div class="details__warning">
                Keep your JWTs in secret. Do not share.
            </div>
            <div class="details__tabs" id="detailsTabs">

                <div class="details__panel details__tab hasCopy">
                    <div class="tab">
                        <div class="tab__btn">
                            <span class="tab__btn__icon svg-close">

                            </span>
                        </div>
                        <h3 class="tab__heading">
                            <span class="copy__heading">
                                Access-JWT
                            </span>
                            <div class="copy">
                                <div>
                                    <span class="copy__icon copyBtn svg-copy"></span>
                                    <span class="copy__hint">Copy to clipboard</span>
                                </div>
                            </div>
                        </h3>
                        <div class="tab__content">
                            <code id="access-jwt">
<%= accessToken %>
                            </code>
                        </div>
                    </div>
                </div>

                <div class="details__panel details__tab hasCopy">
                    <div class="tab">
                        <div class="tab__btn">
                            <span class="tab__btn__icon svg-close">

                            </span>
                        </div>
                        <h3 class="tab__heading">
                            <span class="copy__heading">
                                Refresh-JWT
                            </span>
                            <div class="copy">
                                <div>
                                    <span class="copy__icon copyBtn svg-copy"></span>
                                    <span class="copy__hint">Copy to clipboard</span>
                                </div>
                            </div>
                        </h3>
                        <div class="tab__content">
                            <code id="refresh-jwt">
<%= refreshToken %>
                            </code>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="playground-details__item">
            <h2 class="details__heading">
                Network Name
            </h2>
            <div class="details__panel">
                &nbsp;<%= network.name %>
            </div>
            <div class="details__networks">
                <div class="details__network">
                    <div class="network__icon svg-admin-console"></div>
                    <div class="network__name">
                        Admin Console
                    </div>
                    <a class="network__link" target="_blank" href="<%= admin %>?deviceHiveToken=<%= accessTokenEncoded %>#devices"><%= admin %></a>
                </div>
                <div class="details__network">
                    <div class="network__icon svg-dashboard"></div>
                    <div class="network__name">
                        Dashboard
                    </div>
                    <a class="network__link" target="_blank" href="<%= dashboard %>"><%= dashboard %></a>
                </div>
                <div class="details__network">
                    <div class="network__icon svg-api-console"></div>
                    <div class="network__name">
                        API Console
                    </div>
                    <a class="network__link" target="_blank" href="<%= swagger %>"><%= swagger %></a>
                </div>
            </div>

        </div>

        <div class="playground-details__item hasCopy">
            <h2 class="details__heading">
                <span class="copy__heading">
                    Register Device using cURL
                </span>
                <div class="copy move-on-mobile">
                    <div>
                        <span class="copy__icon copyBtn svg-copy"></span>
                        <span class="copy__hint">Copy to clipboard</span>
                    </div>
                </div>
            </h2>
            <div class="details__panel">
                <code>curl -X PUT \
    -H "Authorization: Bearer <%= accessToken %>" \
    -H "Content-Type: application/json" \
    -d '{"name" : "<%= uniqueDeviceName %>"}' \
    '<%= api %>/device/<%= uniqueDeviceName %>'
                </code>
            </div>
        </div>
        <div id="copyMsg">

        </div>
    </div>
</div>

